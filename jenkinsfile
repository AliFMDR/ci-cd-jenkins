pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t aliffessor/ci-cd-jenkins:latest .'
            }
        }

        stage('Push Image') {
            steps {
                echo 'Skip push dulu (aktifkan kalau sudah login Docker Hub)'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Skip deploy dulu'
            }
        }
    }

    post {
        always {
            echo 'Pipeline selesai (success / gagal)'
        }
        failure {
            echo 'Pipeline gagal. Cek console output.'
        }
    }
}